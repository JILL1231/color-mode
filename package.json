{
	"name": "color-conv",
	"displayName": "Color Conv",
	"description": "It is more convenient to change colors",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"color",
		"converter",
		"color conv",
		"color converter"
	],
	"activationEvents": [
		"onCommand:color-conv.color",
		"onCommand:color-conv.hex",
		"onCommand:color-conv.yuv",
		"onCommand:color-conv.rgb",
		"onCommand:color-conv.hsb",
		"onCommand:color-conv.hsv",
		"onCommand:color-conv.hsl",
		"onCommand:color-conv.kelvin"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "color-conv.color",
				"category": "Color",
				"title": "Color Conv",
				"icon": "./icons/colorIcon.png"
			},
			{
				"command": "color-conv.hex",
				"category": "Color",
				"title": "HEX"
			},
			{
				"command": "color-conv.yuv",
				"category": "Color",
				"title": "YUV"
			},
			{
				"command": "color-conv.rgb",
				"category": "Color",
				"title": "RGB"
			},
			{
				"command": "color-conv.hsb",
				"category": "Color",
				"title": "HSB"
			},
			{
				"command": "color-conv.hsv",
				"category": "Color",
				"title": "HSV"
			},
			{
				"command": "color-conv.hsl",
				"category": "Color",
				"title": "HSL"
			},
			{
				"command": "color-conv.kelvin",
				"category": "Color",
				"title": "KELVIN"
			}
		],
		"keybindings": [
			{
				"command": "color-conv.color",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorTextFocus",
					"command": "color-conv.color",
					"group": "Color"
				}
			],
			"editor/context": [
				{
					"group": "2_workspace",
					"submenu": "color-conv.submenu"
				}
			],
			"color-conv.submenu":[
				{
					"command": "color-conv.hex",
					"group": "2_workspace"
				},
				{
					"command": "color-conv.rgb",
					"group": "2_workspace"
				},{
					"command": "color-conv.hsb",
					"group": "2_workspace"
				},
				{
					"command": "color-conv.hsv",
					"group": "2_workspace"
				},{
					"command": "color-conv.hsl",
					"group": "2_workspace"
				},
				{
					"command": "color-conv.yuv",
					"group": "2_workspace"
				},
				{
					"command": "color-conv.kelvin",
					"group": "2_workspace"
				}
			]
		},
		"submenus": [
			{
				"id":"color-conv.submenu",
				"label": "选择色彩模式"
			}
		]
		
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}